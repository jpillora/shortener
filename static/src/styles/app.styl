darkGrey = #272822
lightGrey = #2F3129

html, body
  width 100%
  height 100%
  
  padding 5px
  @media (min-width: 500px)
    padding 20px

html body.subfwd
  opacity 0
  transition opacity linear 0.3s;

  &.loaded
    opacity 1

  .bold
    font-weight bold
    color black

  .content
    margin 0 auto
    margin-bottom 50px
    max-width 700px
    
    // using an id override semantics !important margin
    #screens
      margin-top 3.5rem !important
      margin-bottom 3.5rem !important
      
  .setup
    .login
      padding 10px
      .input.disabled input
        background-color: rgba(128, 128, 128, 0.28)

    .message
      text-align center
      code
        font-weight bold
    
    table
      thead th.sub
        width 150px
      .nosub td
        font-style italic
        text-align center
  
  .footer
    opacity 0.85
    &:hover
      opacity 1
    text-align right
    .foot
      padding-left 10px